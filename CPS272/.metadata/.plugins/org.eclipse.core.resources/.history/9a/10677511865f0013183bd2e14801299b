#ifndef HASHING_H_
#define HASHING_H_
#include "miniList.h"
template<typename K, typename T>
class hashing {


public:

	hashing<K,T>(int sz){
		list = new miniList<T>[sz];
	}

	int hash(K key);

    const node<T>* operator[](K key)const {
    	return list[hash(key)];
    }

    node<T>* operator[](K key){
          return list[hash(key)];
    }
    void add(K key, T item){
    	list[hash(key)].push(item);
    }

private:
	miniList<T>* list[];

};


#endif /* HASHING_H_ */
