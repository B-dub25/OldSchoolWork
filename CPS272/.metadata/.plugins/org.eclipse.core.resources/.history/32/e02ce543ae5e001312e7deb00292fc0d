#ifndef NODE_H_
#define NODE_H_

#include <iostream>
#include <string>
#include <exception>

using namespace std;
template<typename T>
class node {

	friend ostream& operator<<(ostream& os, const node& obj) {

		return os << obj.data;
	}
	friend class miniList<T>;
	template<typename K, typename T>
	friend class hashing<T,K>;
public:
	node(int info = 0, node* link = NULL) :
			data(info), nextLink(link) {
	}
	;
private:
	T data;
	node* nextLink;
};



#endif /* NODE_H_ */
