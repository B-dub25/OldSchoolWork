#ifndef HASH_H_
#define HASH_H_
#include <string>
class hash {
private:
      int key;
      int value;
      hash *next;
//friend class hashMap;
public:

      hash(int key, int value) {
            this->key = key;
            this->value = value;
            this->next = NULL;
      }

      int getKey() {
            return key;
      }

      int getValue() {
            return value;
      }

      void setValue(int value) {
            this->value = value;
      }

      hash *getNext() {
            return next;
      }

      void setNext(hash *next) {
            this->next = next;
      }
};




#endif /* HASH_H_ */
