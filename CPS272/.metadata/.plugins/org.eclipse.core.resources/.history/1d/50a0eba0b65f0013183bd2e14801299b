#ifndef NODE_H_
#define NODE_H_
#include <iostream>

using namespace std;
template<typename T>
class node{



	friend ostream& operator<<(ostream& os, const node<T>& obj) {

		return os << obj.data;
	}
	void operator=(const node<T> lhs ,T o){
		lhs.data = o;

	}
public:
	node<T>(T info, node* link = NULL) :
			data(info), nextLink(link) {
	}
	;
private:
	T data;
	node<T>* nextLink;
};





#endif /* NODE_H_ */
