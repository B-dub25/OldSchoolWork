#ifndef NODE_H_
#define NODE_H_

#include <iostream>
#include <string>
#include <exception>
using namespace std;
template<typename T>
class node {

	friend ostream& operator<<(ostream& os, const node<T>& obj);
	friend class miniList;

public:
	node(T info = 0, node* link = NULL) :
			data(info), nextLink(link) {
	}
	;
private:
	T data;
	node<T>* nextLink;
};
template<typename T>
ostream& operator<<(ostream& os, const node<T>& obj) {

	return os << obj.data;
}

#endif /* NODE_H_ */
