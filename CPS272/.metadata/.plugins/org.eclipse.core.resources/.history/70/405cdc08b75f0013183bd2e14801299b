#ifndef NODE_H_
#define NODE_H_
#include <iostream>
#include <string>

using namespace std;

template<typename T>
class node{

	friend ostream& operator<<(ostream& os, const node<T>& obj) {

		return os << obj.data;
	}
    node<T>* operator=(T obj){
    	this->data = obj;
    	return *this;
    }
public:
	node<T>(T info, node* link = NULL) :
			data(info), nextLink(link) {
	}
	;
private:
	T data;
	node<T>* nextLink;
};

#endif /* NODE_H_ */
