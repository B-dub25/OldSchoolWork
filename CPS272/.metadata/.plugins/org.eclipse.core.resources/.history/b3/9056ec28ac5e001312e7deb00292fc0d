#ifndef NODE_H_
#define NODE_H_

#include <iostream>
#include <string>
#include <exception>

using namespace std;
template<typename T>
class node {

	friend ostream& operator<<(ostream& os, const node<T>& obj);
	friend class miniList;
	friend class linkIterator;
public:
	node(int info = 0, node<T>* link = NULL) :
			data(info), nextLink(link) {
	}
	;
private:
	T data;
	node* nextLink;
};

ostream& operator<<(ostream& os, const node<T>& obj) {

	return os << obj.data;
}

#endif /* NODE_H_ */
