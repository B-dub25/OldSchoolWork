#include "phoneNumber.h"



int main(int argc, char **argv) {

	phoneNumber myNumber;
	do {
	   try{
		cout << "Enter your phone number ";
		   cin >> myNumber;
		cout << myNumber;
		break;
	   }catch (invalidFormat& e) {
		  cout << e.what() << endl;
		  cin.clear();
		  cin.ignore(1,'\n');

	}

	} while (true);
}




