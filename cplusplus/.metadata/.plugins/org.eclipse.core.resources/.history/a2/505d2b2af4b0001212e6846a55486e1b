#include "phoneNumber.h"



int main(int argc, char **argv) {

	phoneNumber myNumber;
	string temp;
	do {
	   try{
		cout << "Enter your phone number ";
		   cin >> myNumber;
		   temp = myNumber;
		cout << myNumber;
		break;
	   }catch (invalidFormat& e) {
		   cin.clear();
		   cin.ignore(10,'\n');
		   cout << temp << e.what() << endl;;

	}

	} while (true);
}




